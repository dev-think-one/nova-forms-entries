{
    "name": "think.studio/nova-forms-entries",
    "description": "Nova helper to implement laravel-forms-entries package.",
    "keywords": [
        "forms",
        "forms-entries"
    ],
    "homepage": "https://github.com/dev-think-one/nova-forms-entries",
    "license": "MIT",
    "authors": [
        {
            "name": "Yaroslav Georgitsa",
            "email": "yg@think.studio",
            "homepage": "https://github.com/yaroslawww",
            "role": "Developer"
        }
    ],
    "repositories": [
        {
            "type": "composer",
            "url": "https://nova.laravel.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "think.studio/laravel-forms-entries": "^3.2",
        "laravel/nova": "^4.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.21",
        "orchestra/testbench": "^8.5",
        "phpunit/phpunit": "^10.2",
        "psalm/plugin-laravel": "^2.8",
        "vimeo/psalm": "^5.13"
    },
    "autoload": {
        "psr-4": {
            "NovaFormEntries\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "NovaFormEntries\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "XDEBUG_MODE=coverage vendor/bin/phpunit --colors=always",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/phpunit --colors=always --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
